<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> FDACS @ViewBag.Title </title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <meta name="description" content="This is the layout page for Great Ideas" />
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <!--Would like to shift "home" button back a tab or so-->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("FDACS", "Index", "Ideas", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Ideas")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content col-md-20">
        <div class="row">
            <div class=”col-md-12”><img src="~/Content/images/fdacs.jpg" class="img-responsive center-block pad-down" /></div>
            <div class="col-md-12 error-message">
                    Any email sent from this site will be from "teamzed@outlook.com." If you do not want your email to be spammed
                    by notifications from submitted ideas, please delete your idea when you are finished.
            </div>
        </div>
        @RenderBody()
        <footer class="col-md-12">
            <br />
            <hr />
            <p style="font-size:12px">
                <b>
                    Please note that Florida has a broad public records law (Chapter 119, Florida Statutes).
                    Most written communications to or from state employees are public records obtainable by request.
                    <br />
                    If you have any questions please email @Html.ActionLink("PPMO Support", "WriteNew", "Mails").
                </b>
            </p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
